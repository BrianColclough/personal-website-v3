---
import { ClientRouter } from "astro:transitions";
import Footer from "../components/footer/footer.astro";
import NavBar from "../components/nav-bar";
import SEOHead from "../components/SEOHead.astro";
import "../styles/design-system.css";

interface Props {
    title: string;
    description?: string;
    image?: string;
    article?: boolean;
}

const {
    title,
    description = "Brian Colclough's personal website featuring photography, software engineering, and blog posts about AI and technology.",
    image,
    article,
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <SEOHead
            title={title}
            description={description}
            image={image}
            article={article}
        />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link
            rel="preload"
            href="/fonts/Fields-Regular.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            href="/fonts/wotfard-regular.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            href="/fonts/GeistMono-Regular.woff2"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
        <ClientRouter />
    </head>
    <body class="flex flex-col min-h-screen">
        <a href="#main" class="skip-link">Skip to content</a>
        <NavBar transition:persist client:load />
        <main id="main" class="flex-grow mt-16">
            <slot />
        </main>
        <Footer />
    </body>
</html>
