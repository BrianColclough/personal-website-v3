---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/footer/footer.astro";
import NavBar from "../components/nav-bar";
import SEOHead from "../components/SEOHead.astro";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const {
  title,
  description = "Brian Colclough's personal website featuring photography, software engineering, and blog posts about AI and technology.",
  image,
  article,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={title}
      description={description}
      image={image}
      article={article}
    />
    <ViewTransitions />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="bg-black text-white flex flex-col min-h-screen font-wotfard">
    <NavBar transition:persist client:load />
    <main class="flex-grow mt-16" transition:animate="slide">
      <slot />
    </main>
    <Footer />
  </body>
</html>
