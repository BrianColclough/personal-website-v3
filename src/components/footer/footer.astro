---
import { Icon } from "astro-icon/components";
const currentYear = new Date().getFullYear();

interface SocialLink {
    label: string;
    href: string;
    icon: string;
}

const socialLinks: SocialLink[] = [
    {
        label: "GitHub",
        href: "https://github.com/briancolclough",
        icon: "github",
    },
    {
        label: "Instagram",
        href: "https://instagram.com/brian_colclough",
        icon: "instagram",
    },
];

const footerLinks = [
    {
        title: "Writing",
        links: [{ label: "Blog", href: "/blog" }],
    },
    {
        title: "Photography",
        links: [
            // { label: "Portfolio", href: "/portfolio" },
            //TODO: Add collections
            //   { label: "Collections", href: "/collections" },
        ],
    },
];
---

<footer class="mt-20 border-t border-gray-200 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="py-12 md:py-16 grid grid-cols-1 md:grid-cols-3 gap-12">
            <!-- Brand Section -->
            <div class="space-y-4">
                <h3
                    class="text-lg font-bold text-purple-700"
                    style="font-family: 'Fields', Georgia, serif;"
                >
                    Brian Colclough
                </h3>
                <p class="text-sm text-gray-600 leading-relaxed max-w-xs">
                    Software engineer and hobbyist photographer documenting my
                    journey through pixels and code.
                </p>
                <div class="flex gap-4 items-center pt-2">
                    {
                        socialLinks.map(({ label, href, icon }) => (
                            <a
                                href={href}
                                aria-label={label}
                                data-astro-prefetch
                                class="p-2 text-gray-500 hover:text-purple-600 hover:bg-white rounded-lg transition-all duration-200 focus-ring"
                            >
                                <Icon name={`${icon}`} class="w-5 h-5" />
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Navigation Sections -->
            {
                footerLinks.map(({ title, links }) => (
                    <div class="space-y-4">
                        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wider">
                            {title}
                        </h3>
                        <ul class="space-y-3">
                            {links.map(({ label, href }) => (
                                <li>
                                    <a
                                        href={href}
                                        class="text-sm text-gray-600 hover:text-purple-600 transition-colors duration-200 focus-ring"
                                    >
                                        {label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }

            <!-- Additional Info -->
            <div class="space-y-4">
                <h3
                    class="text-sm font-semibold text-gray-900 uppercase tracking-wider"
                >
                    Connect
                </h3>
                <p class="text-sm text-gray-600">
                    Exploring the intersection of technology and art through
                    photography and code.
                </p>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-gray-200 py-8">
            <p class="text-sm text-gray-500 text-center">
                &copy; {currentYear} Brian Colclough. All rights reserved.
            </p>
        </div>
    </div>
</footer>
