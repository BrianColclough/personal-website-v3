---
import Layout from "../../layouts/Layout.astro";

const age = new Date().getFullYear() - new Date("2000-06-14").getFullYear();

// Personal facts and interests
const personalFacts = [
    { label: "Age", value: `${age} years old`, icon: "üéÇ" },
    { label: "Location", value: "Charlotte, NC", icon: "üìç" },
    { label: "Education", value: "MS in AI, Johns Hopkins", icon: "üéì" },
    { label: "Role", value: "Frontend Developer", icon: "üíª" },
];

const interests = [
    { name: "Photography", description: "Capturing light and moments", icon: "üì∏" },
    { name: "AI & Machine Learning", description: "Exploring the future of tech", icon: "ü§ñ" },
    { name: "Hiking & Outdoors", description: "Finding peace in nature", icon: "üèîÔ∏è" },
    { name: "Fitness", description: "Staying active and healthy", icon: "üí™" },
    { name: "Travel", description: "Discovering new perspectives", icon: "‚úàÔ∏è" },
    { name: "Movies", description: "I love watching movies", icon: "üé¨" },
];

const timeline = [
    { year: "2025", event: "Pursuing MS in AI at Johns Hopkins", type: "education" },
    { year: "2022", event: "Started as Frontend Developer", type: "career" },
    { year: "2020", event: "Bought my first professional camera", type: "personal" },
    { year: "2018", event: "Graduated College", type: "education" },
];
---

<Layout title="About | Brian Colclough" description="Learn more about Brian Colclough - software engineer, photographer, and AI enthusiast based in Charlotte, NC.">
    
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-purple-50 via-white to-green-50 py-20 lg:py-32">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
                
                <!-- Text Content -->
                <div class="prose-spacing">
                                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-purple-700 leading-tight mb-6" style="font-family: 'Fields', Georgia, serif;" transition:name="page-title">
                Hey, I'm Brian
            </h1>
                    
                    <div class="space-y-6 text-lg text-gray-700 leading-relaxed">
                        <p>
                            I'm a <span class="text-purple-600 font-medium">{age}-year-old software engineer</span> based in Charlotte, NC, 
                            currently pursuing my master's degree in <span class="text-purple-600 font-medium">Artificial Intelligence</span> 
                            at Johns Hopkins University.
                        </p>
                        
                        <p>
                            When I'm not coding or studying, you'll find me capturing moments with my camera or 
                            exploring the great outdoors. <span class="text-forest-600 font-medium">Photography and fitness</span> 
                            are two of my biggest passions.
                        </p>
                    </div>

                    <!-- Quick Facts -->
                    <div class="grid grid-cols-2 gap-4 mt-8">
                        {personalFacts.map((fact) => (
                            <div class="flex items-center gap-3">
                                <span class="text-2xl">{fact.icon}</span>
                                <div>
                                    <div class="text-sm text-gray-600 font-medium">{fact.label}</div>
                                    <div class="text-purple-700 font-semibold">{fact.value}</div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>

                <!-- Headshot Image -->
                <div class="relative group lg:order-last">
                    <div class="relative overflow-hidden rounded-2xl shadow-xl hover-lift transition-smooth">
                        <!-- Placeholder for headshot - replace with actual image -->
                        <div class="w-full h-96 lg:h-[500px] bg-gradient-to-br from-purple-100 to-green-100 flex items-center justify-center">
                            <div class="text-center">
                                <div class="w-24 h-24 bg-purple-200 rounded-full mx-auto mb-4 flex items-center justify-center">
                                    <span class="text-4xl">üì∏</span>
                                </div>
                                <p class="text-gray-600">Professional headshot<br/>coming soon</p>
                            </div>
                        </div>
                        <!-- Uncomment and replace with actual headshot -->
                        <!-- 
                        <Image
                            class="w-full h-auto object-cover"
                            alt="Brian Colclough - Professional headshot"
                            src="/images/brian-headshot.jpg"
                            height="500"
                            width="400"
                            format="webp"
                            loading="eager"
                        />
                        -->
                    </div>
                    
                    <!-- Floating accent -->
                    <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-forest-100 rounded-full -z-10 group-hover:scale-110 transition-transform duration-300"></div>
                </div>

            </div>
        </div>
    </section>

    <!-- My Story Section -->
    <section class="py-20 bg-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-purple-700 mb-4" style="font-family: 'Fields', Georgia, serif;">
                    My Story
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    The journey that led me to blend technology with creativity
                </p>
            </div>

            <div class="prose-spacing space-y-8">
                <div class="card p-8 hover-lift transition-smooth">
                    <h3 class="text-xl font-bold text-purple-700 mb-4" style="font-family: 'Fields', Georgia, serif;">
                        üì∏ My Journey into Photography
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        My love for photography started in college when I saved up to buy my first camera. 
                        Before that, I would always snap pictures on my phone, driven by a natural curiosity 
                        to capture moments. As a kid, I would often look through travel photography books at 
                        my grandmother's house‚ÄîI think that's what sparked my curiosity about how others see the world.
                    </p>
                </div>

                <div class="card p-8 hover-lift transition-smooth">
                    <h3 class="text-xl font-bold text-purple-700 mb-4" style="font-family: 'Fields', Georgia, serif;">
                        üí° What Inspires Me
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        <span class="text-forest-600 font-medium">Capturing beautiful light</span> and personal moments are what I love. Whether it's the play of shadows or the way a 
                        beam of sunlight highlights a subject. Ralph Gibson's work 
                        has been a major influence on my journey, inspiring me to see the ordinary in extraordinary ways.
                    </p>
                </div>

                <div class="card p-8 hover-lift transition-smooth">
                    <h3 class="text-xl font-bold text-purple-700 mb-4" style="font-family: 'Fields', Georgia, serif;">
                        üöÄ Work and Aspirations
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        I've been a frontend developer for a few years, focusing on creating clean, elegant designs 
                        with an eye for detail. My current pursuit of a master's degree in AI is driven by a desire 
                        to deepen my engineering expertise and explore the potential of machine learning. One day, 
                        I hope to become a <span class="text-purple-600 font-medium">machine learning engineer</span>, 
                        blending my love for technology and creativity.
                    </p>
                </div>
            </div>

        </div>
    </section>

    <!-- Interests Section -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-purple-700 mb-4" style="font-family: 'Fields', Georgia, serif;">
                    What I Love
                </h2>
                <p class="text-lg text-gray-600">
                    The passions and interests that fuel my creativity
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {interests.map((interest) => (
                    <div class="card hover-lift transition-smooth text-center p-6">
                        <div class="text-4xl mb-4">{interest.icon}</div>
                        <h3 class="text-lg font-bold text-purple-700 mb-2" style="font-family: 'Fields', Georgia, serif;">
                            {interest.name}
                        </h3>
                        <p class="text-gray-600 text-sm">
                            {interest.description}
                        </p>
                    </div>
                ))}
            </div>

        </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-20 bg-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-purple-700 mb-4" style="font-family: 'Fields', Georgia, serif;">
                    My Journey
                </h2>
                <p class="text-lg text-gray-600">
                    Key moments that shaped my path
                </p>
            </div>

            <div class="relative">
                <!-- Timeline line -->
                <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-purple-200"></div>
                
                <div class="space-y-8">
                    {timeline.map((item, index) => (
                        <div class="relative flex items-start gap-6 group">
                            <!-- Timeline dot -->
                            <div class={`relative z-10 w-16 h-16 rounded-full flex items-center justify-center text-white font-bold transition-transform duration-200 group-hover:scale-110 ${
                                item.type === 'education' ? 'bg-purple-500' : 
                                item.type === 'career' ? 'bg-forest-600' : 'bg-purple-400'
                            }`}>
                                {item.year.slice(-2)}
                            </div>
                            
                            <!-- Content -->
                            <div class="card p-6 flex-1 hover-lift transition-smooth">
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="text-lg font-bold text-purple-700" style="font-family: 'Fields', Georgia, serif;">
                                        {item.year}
                                    </span>
                                    <span class={`px-2 py-1 rounded-full text-xs font-medium ${
                                        item.type === 'education' ? 'bg-purple-100 text-purple-700' :
                                        item.type === 'career' ? 'bg-forest-100 text-forest-700' : 'bg-gray-100 text-gray-700'
                                    }`}>
                                        {item.type}
                                    </span>
                                </div>
                                <p class="text-gray-700">
                                    {item.event}
                                </p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

        </div>
    </section>

    <!-- Connect Section -->
    <section class="py-20 bg-gradient-to-br from-purple-50 to-green-50">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            
            <h2 class="text-3xl md:text-4xl font-bold text-purple-700 mb-6" style="font-family: 'Fields', Georgia, serif;">
                Let's Connect
            </h2>
            
            <p class="text-lg text-gray-700 leading-relaxed mb-8 max-w-2xl mx-auto">
                I love meeting new people and discussing photography, technology, or any shared interests. 
                Feel free to reach out if you'd like to chat!
            </p>

            <div class="flex flex-wrap justify-center gap-4">
                <a href="/blog" class="btn btn-primary hover-lift transition-smooth">
                    Read My Blog
                </a>
                <a href="https://instagram.com/brian_colclough" target="_blank" rel="noopener" class="btn btn-forest hover-lift transition-smooth">
                    View Photography
                </a>
            </div>

        </div>
    </section>

</Layout>


