---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import Card from "../../components/card/card.astro";
import Layout from "../../layouts/Layout.astro";
import { contentfulClient, type BlogEntryRO } from "../../lib/contentful";
import type { BlogPost } from "./types/blogPost";

const contentfulEntries = await contentfulClient.getEntries<BlogEntryRO>({
    content_type: "blogPost",
});

const contentfulPosts: BlogPost[] = contentfulEntries.items.map((item) => {
    const { title, datePosted, summary, slug, content } = item.fields;

    return {
        title,
        slug,
        summary,
        content: documentToHtmlString(content),
        datePosted: new Date(datePosted).toLocaleDateString(),
        rawDate: new Date(datePosted),
        source: "contentful" as const,
    };
});

const { getCollection } = await import("astro:content");
const markdownEntries = await getCollection("blog");
const markdownPosts = await Promise.all(
    markdownEntries.map(async (entry: any) => {
        const slug = entry.data.slug || entry.slug;

        return {
            title: entry.data.title,
            slug,
            summary: entry.data.summary,
            content: "",
            datePosted: entry.data.datePosted.toLocaleDateString(),
            rawDate: entry.data.datePosted,
            source: "markdown" as const,
        };
    }),
);

const posts: BlogPost[] = [...contentfulPosts, ...markdownPosts].sort(
    (a, b) => b.rawDate.getTime() - a.rawDate.getTime(),
);
---

<head>
    <link
        rel="preload"
        href="/fonts/wotfard-regular.woff2"
        as="font"
        type="font/woff2"
        crossorigin="anonymous"
    />
    <link
        rel="preload"
        href="/fonts/GeistMono-Regular.woff2"
        as="font"
        type="font/woff2"
        crossorigin="anonymous"
    />
</head>
<Layout title="Brian Colclough | Blog">
    <!-- Hero Section -->
    <section
        class="relative w-full min-h-[400px] bg-black text-white flex items-center justify-center"
    >
        <div class="max-w-4xl text-center">
            <h1
                class="text-6xl sm:text-8xl font-fields font-extrabold text-orange-500 mb-4"
            >
                My Blog
            </h1>
            <p
                class="text-lg sm:text-xl font-geistMono font-light text-gray-300"
            >
                A collection of my thoughts, opinions, and learnings as a
                photographer, software engineer, and fitness enthusiast.
            </p>
        </div>
    </section>

    <!-- Blog Post Cards -->
    <div
        class="mt-12 px-6 grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-7xl mx-auto"
    >
        {
            posts.map((p) => (
                <Card
                    title={p.title}
                    subTitle={p.datePosted}
                    linkTo={"/blog/" + p.slug}
                    body={p.summary}
                />
            ))
        }
    </div>
</Layout>
